<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/work_sans_semibold</item>

    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>

    </style>

    <style name="BottomSheetDialogThemeWhite" parent="BaseBottomSheetDialogwhite">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>

    </style>

    <style name="BaseBottomSheetDialogwhite" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetwhite</item>
    </style>
    <style name="BottomSheetDialogThemeWhitewrampcontent" parent="BaseBottomSheetDialogwhite_wrap_content">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>

    </style>

    <style name="BottomSheetDialogThemeWhitewrampcontentsecond" parent="BaseBottomSheetDialogwhite_wrap_contentsecond">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>

    </style>
    <style name="BottomSheetwhitewrapcontnetsecond" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/roundshapebottom</item>
        <item name="behavior_peekHeight">700dp</item>
    </style>

    <style name="BaseBottomSheetDialogwhite_wrap_contentsecond" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetwhitewrapcontnetsecond</item>
    </style>


    <style name="BaseBottomSheetDialogwhite_wrap_content" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetwhitewrapcontnet</item>
    </style>
    <style name="BottomSheetwhitewrapcontnet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/roundshapebottomwhite</item>
        <item name="behavior_peekHeight">450dp</item>
    </style>
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/roundshapebottom</item>
        <item name="behavior_peekHeight">1000dp</item>
    </style>
    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetwhite" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/roundshapebottomwhite</item>
        <item name="behavior_peekHeight">1000dp</item>
    </style>

    <style name="GenericEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>

        <item name="android:textColor">@color/black_three</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>

        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Button_Dialog" parent="android:Theme.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="Button_Dialognew" parent="android:Theme.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>
    <style name="Button_Dialog_new" parent="android:Theme.Dialog">
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowMinWidthMinor">95%</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="DialogHeading" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_xxlarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubTitleStyleBlack" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>

    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme_Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="BottomButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
        <item name="android:fontFamily">@font/work_sans_semibold</item>
        <item name="android:background">@color/butterscotch_two</item>
    </style>

    <style name="bluebutton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
        <item name="android:fontFamily">@font/work_sans_bold</item>
        <item name="android:background">@color/bright_blue</item>
    </style>

    <style name="GenericTextView" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="PrimaryTextViewOpenSans" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/work_sans</item>
    </style>

    <style name="PrimaryTextViewOpenSansBold" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/work_sans_bold</item>
    </style>

    <style name="GenericTextViewBold" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/work_sans_bold</item>
    </style>

    <style name="GenericTextViewpricedetail" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/work_sans_light</item>

        <item name="android:textSize">@dimen/text_large</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="GenericTextViewpriceheading" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/work_sans_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_large</item>

    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/lightgray</item>
        <item name="colorControlActivated">@color/butterscotch</item>
        <item name="android:progressDrawable">@drawable/ic_star_icon</item>
    </style>

    <style name="progressBarOrane" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/butterscotch</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">1000dp</item>


    </style>

</resources>
